        xmlns:local="clr-namespace:Universcal_screen_control_for_GREMM"
        mc:Ignorable="d"
                        WindowStyle="None"
        
        AllowsTransparency="True"
        Opacity="1"
        Topmost="False"
        Background="Black"
        Title="Switch_Screen" Height="600" Width="640" ResizeMode="NoResize">
